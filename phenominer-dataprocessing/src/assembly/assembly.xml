<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>release</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>**/java_utils.jar</include>
				<include>**/jeniatagger-0.4.0-jar-with-dependencies.jar</include>
				<include>**/pmcarticleparser.jar</include>
				<include>**/sptoolkit.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>models</directory>
			<outputDirectory>models</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/${artifactId}-jar-with-dependencies.jar</source>
			<outputDirectory>lib</outputDirectory>
		</file>
	</files>
</assembly>
